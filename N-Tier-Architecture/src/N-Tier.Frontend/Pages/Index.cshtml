@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    @if (User.IsInRole("Customer") || User.IsInRole("Administrator") || User.IsInRole("Librarian"))
    {
        <a class="btn btn-primary" asp-area="" asp-page="/Loans/Create">Loan a Book</a>
    }
    else
    {
        <p>Start by registering or logging in</p>
    }
</div>
